<div class="container">

   {{#ui-navigation
    selected=currentPath
    mood='primary'
    onChange=(action 'navHandler')

    as |nav|
  }}

    {{#nav.items}}
    {{#nav.brand
      linkTo='https://github.com/lifegadget/ui-navigation'
    }}
      {{icon 'github' size='2.5rem'}}
      ui-navigation
    {{/nav.brand}}
      {{nav.item 'Intro' routeTo='index'}}
      {{nav.item 'Demo' routeTo='demo'}}
      {{nav.item 'Related Addons' routeTo='related'}}
      {{#nav.right}}
        <img alt="fury" src="https://badge.fury.io/js/ui-navigation.svg">
      {{/nav.right}}
    {{/nav.items}}
  {{/ui-navigation}}
  <hr>
  {{#markdown-convert style='github'}}
  > Navigational menu's for ambitious Ember apps
  {{/markdown-convert}}

  <br>
  {{outlet}}

</div>